<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>Notes Page</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <!-- <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button> -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="http://localhost:8081">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:8081/users">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:8081/notes">Notes</a>
                    </li>
                    <!-- <li class="nav-item">
                        <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                    </li> -->
                </ul>
            </div>
        </div>
    </nav>

    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="text-center">ID</th>
                <th scope="col" class="text-center">USER_ID</th>
                <th scope="col" class="text-center">Title</th>
                <th scope="col" class="text-center">Content</th>
            </tr>
        </thead>
        <tbody>
            <% notes.forEach(function(note) { %>
                <tr>
                    <td class="text-center">
                        <%= note.id %>
                    </td>
                    <td class="text-center">
                        <%= note.user_id %>
                    </td>
                    <td class="text-center">
                        <%= note.title %>
                    </td>
                    <td class="text-center">
                        <%= note.content %>
                    </td>
                    <td class="text-center">
                        <form action="/edit-note/<%= note.id %>" method="GET">
                            <button class="btn btn-warning" type="submit">Edit</button>
                        </form>
                    </td>
                    <td>
                        <form action="/delete-user" method="post">
                            <input type="text" hidden value="<%= note.id %>" name="id" />
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </td>

                </tr>
                <% }); %>
    </table>
</body>

</html>