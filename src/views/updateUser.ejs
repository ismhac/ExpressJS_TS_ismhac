<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>Update Users</title>
</head>

<body>
    <form action="/update-user" method="POST">
        <div>
            <label>First name:</label>
            <input name="first_name" value="<%= dataUser.first_name %>" placeholder="<%= dataUser.first_name %>" />
        </div>
        <div>
            <label>Last name:</label>
            <input name="last_name" value="<%= dataUser.last_name %>" placeholder="<%= dataUser.last_name %>" />
        </div>
        <input type="text" value="<%= dataUser.id %>" hidden name="id" />
        <div>
            <button class="btn-save" type="submit">Save</button>
        </div>

    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</body>

</html>